{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSourceMap": true,
    "lib": ["es2017", "dom"],
    "types": ["node", "mocha", "chai", "chai-subset"]
  },
  "exclude": [
    "node_modules",
    "dts"
  ]
}